module PlayHelper
  
  def format_high_score(score, activity_name)
    activity_name
    case activity_name
      when "Leap Frog", "Mantis", "Poker Pairs", "Sentence Swiper", "Shopping"
        score+" seconds"
      when "Cliffhanger", "Bath Tub Bubbles", "Bathtub Bubbles", "Downfall", "Quiz Show"
        score+" points"
      else
        "completed"
    end
  end
  
end

