<h1>Add a word list to <%= @course.name %></h1>
<p><%= link_to "Return to "+@course.name+" class page", :controller => "courses", :action => "show", :id => @course.id %></p>


<br />
<div align="center">
	<% link_to :controller => "customize", :action => "new", :cmzr_type => "list" do %>
		<div class="big_button" style="width: 250px">
			<span>Create a new word list</span>
		</div>
	<% end %>
		
	<% link_to "/courses/search_hidden_word_lists?search[user_id_equals]=" + String(current_user.id) +
					"&search[course_id_equals]=" + String(@course.id) +
					"&search[hidden_equals]=1" do %>
		<div class="big_button" style="width: 250px">
			<span>Show a hidden word list</span>
		</div>
	<% end %>
</div>