<div class="available_item" id="<%= dom_id(showing_word_list) %>" onmouseover="this.className = 'available_item_controls'" onmouseout="this.className = 'available_item'">
	<div>
		<h3><%= showing_word_list.word_list.description %></h3>
		<%= link_to image_tag('word_lists/review_list.jpg'), :controller => "study", :action => "browse", :id => showing_word_list.id %>
		<%= link_to image_tag('word_lists/print_list.jpg'), :controller => "study", :action => "print", :id => showing_word_list.id %>
		<%= link_to image_tag('word_lists/study_list.jpg'), :controller => "study", :action => "practice", :id => showing_word_list.id %>
		<%= link_to image_tag('word_lists/catch_words.jpg'), :controller => "study", :action => "catch", :id => showing_word_list.id %>
	</div>
	<br class="clearFloat" />
	<% if is_teacher_for(@course) %>
		<ul>
			<li>Teacher controls:</li>
			<li><%= link_to "Edit this word list", :controller => "customize", :action => "edit", :id => showing_word_list.word_list.id, :cmzr_type => "list" %>
			<% if current_user and current_user.is_premium_subscriber? %>
				<li><%= link_to "View stats", :controller => "study", :action => "stats", :id => showing_word_list.id, :course => @course.id %></li>
			<% end %>
		</ul>
	<% end %>
</div>