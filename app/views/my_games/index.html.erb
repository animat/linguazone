<% content_for :page_script do %>
<script type="text/javascript">

Event.observe(window, 'load', function() {
	$('onlySearchMyGames').hide();
	$('more_options').show();
	$('fewer_options').hide();
});

</script>
<% end %>
<% stylesheet 'my_games' %>
<% stylesheet 'teachers' %>

<div>
	<div class="floatLeft">
		<h1>My games</h1>
		<p>Create, edit, and manage your LinguaZone games.</p>
	</div>
	<div class="floatRight">
		<% link_to :controller => "customize", :action => "new", :cmzr_type => "game" do %>
			<div class="new_button">
				<span>Create a new game</span>
			</div>
		<% end %>	
	</div>
	<br class="clearFloat" />
</div>

<fieldset>
	<legend>Search my LinguaZone games</legend>
	<%= render :partial => "search_fields" %>
</fieldset>

<br />

<div align="center">
	<% link_to :action => "adopt" do %>
		<div class="big_button" style="width: 200px">
			<span>Adopt a game</span>
		</div>
	<% end %>
	<% link_to :action => "all" do %>
		<div class="big_button" style="width: 200px">
			<span>View all my games</span>
		</div>
	<% end %>
</div>