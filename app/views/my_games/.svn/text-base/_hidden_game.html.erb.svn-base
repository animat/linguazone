<div class="game_listing" id="<%= dom_id(hidden_game) %>">
	<div class="game_details">
		<%= link_to image_tag('/games/'+hidden_game.game.activity.swf+'/display/icon-small.jpg', :alt => 'Play '+hidden_game.game.activity.name), play_path(hidden_game.game.id) %>
		<p>
			<%= hidden_game.game.description %>
			<br />
			<span class="date">Last updated <%= format_short_date(hidden_game.game.updated_at) %></span>
		</p>
	</div>
	
	<div class="manage_game">
		<%= link_to 'Edit', :controller => "customize", :action => "edit", :id => hidden_game.game.id, :cmzr_type => "game" %>
		<% unless show_in_course.nil? %>
			|
			<%= link_to_remote 'Show '+String(hidden_game.course_id),
				:loading => "$('show_"+dom_id(hidden_game)+"').replace('Showing...')",
				:url => {:controller => "courses", :action => "show_game", :id => hidden_game.id },
				:html => {:id => "show_"+dom_id(hidden_game) } %>
		<% end %>
	</div>
	<br class="clearFloat" />

</div>