<% unless item.game.nil? %>
	<div class="game_listing" id="<%= dom_id(item) %>">
		<div class="game_details">
			<%= link_to image_tag('/games/'+item.game.activity.swf+'/display/icon-small.jpg', :alt => 'Play '+item.game.activity.name), play_path(item.game.id) %>
			<p>
				<%= item.game.description %>
				<br />
				<span class="date">Last updated <%= format_short_date(item.game.updated_at) %></span>
			</p>
		</div>
	
		<div class="manage_game">
			<%= link_to 'Edit', :controller => "customize", :action => "edit", :id => item.game.id, :cmzr_type => "game" %>
			<% unless show_in_course.nil? %>
				|
				<%= link_to "Show", show_game_courses_path(item), :class => "show_available_item" %>
			<% end %>
		</div>
		<br class="clearFloat" />
	</div>
<% end %>