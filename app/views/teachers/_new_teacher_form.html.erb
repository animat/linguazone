<div>
	<div class="floatLeft">
		<%= f.label :first_name, "Your first name:" %><br />
    	<%= f.text_field :first_name %>
	</div>
	<div style="float: right; margin-right: 80px">
		<%= f.label :last_name, "Your last name:" %><br />
    	<%= f.text_field :last_name %>
	</div>
	<br class="clearFloat" />
</div>
<br />
<div>
	<div class="floatLeft">
		<%= f.label :email, "Your email address:" %><br />
	    <%= f.text_field :email %><br />
		<span class="input_hint">(use your school address or personal address)</span>
	</div>
	<div style="float: right; margin-right: 80px">
		<%= f.label :password, "Create a LinguaZone password:" %><br />
	    <%= f.password_field :password %><br />
		<span class="input_hint">(anything you want &mdash; so long as you will remember it!)</span>
	</div>
	<br class="clearFloat" />
</div>

<br />
<%= f.hidden_field :role, :value => "teacher" %>