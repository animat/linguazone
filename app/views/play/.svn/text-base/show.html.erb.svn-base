<% content_for :page_script do %>
<script type="text/javascript">
function open_new_window() {
	window.open('http://www.linguazone.com', '', 'fullscreen=yes, scrollbars=auto');
}
</script>
<% end %>

<% stylesheet 'play' %>

<h1>Play <%= @game.activity.name %></h1>
<p>
	<%= @game.description %>
	<% unless current_user.nil? %>
		<% if @game.updated_by_id == current_user.id %>
			<%= link_to "[edit this game]", :controller => "customize", :action => "edit", :cmzr_type => "game", :id => @game.id%>
		<% end %>
	<% end %>
</p>

<div id="game_window">
	<div id="game">
		<%= swf_tag '/LZContainer/LZContainer.swf', {:id => "game", :flashvars => @flashvars, :size => "600x425", :parameters => {:allowFullScreen => true, :scale => "exactfit", :allowScriptAccess => "sameDomain", :quality => "high", :align => "middle", :width => "600", :height => "425", :game_id => @game.id}} %>
	</div>
</div>

<%# TODO: Deal with typed-input games link_to_function "New window", "open_new_window();" %>