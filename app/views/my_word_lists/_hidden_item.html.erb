<% unless item.word_list.nil? %>
	<div class="game_listing" id="<%= dom_id(item) %>">
		<div class="game_details">
			<p>
				<%= item.word_list.description %>
				<br />
				<span class="date">Last updated <%= format_short_date(item.word_list.updated_at) %></span>
			</p>
		</div>
	
		<div class="manage_game">
			<%= link_to 'Edit', :controller => "customize", :action => "edit", :id => item.word_list.id, :cmzr_type => "list" %>
			<% unless show_in_course.nil? %>
				|
				<%= link_to "Show", show_word_list_courses_path(item), :class => "show_available_item" %>
			<% end %>
		</div>
		<br class="clearFloat" />
	</div>
<% end %>