<% stylesheet 'my_games' %>

<% if @course.nil? %>
	<% if params[:search].nil? %>
		<h1>Find your LinguaZone word list</h1>
	<% else %>
		<h1>Search results (<%= @available_lists_count %> total)</h1>
	<% end %>
	<fieldset>
		<legend>Search my word lists</legend>
		<%= render :partial => "search_fields" %>
	</fieldset>
	<br />
<% else %>
	<% if params['search']['hidden_equals'] == '1' %>
		<h1>Hidden games in <%= @course.name %> (<%= @available_lists_count %> total)</h1>
		<p><%= link_to "Go to "+@course.name+" class page", :controller => "courses", :action => "show", :id => @course.id %></p>
		<fieldset>
			<legend>Search hidden lists in <%= @course.name %></legend>
			<%= render :partial => "search_fields" %>
		</fieldset>
	<% end %>
<% end %>

<% unless @available_lists.nil? or @available_lists.empty? %>
	<% @available_lists.each do |available_list| %>
		<%= render :partial => "hidden_list", :locals => {:hidden_list => available_list, :show_in_course => @course} %>
	<% end %>
<% end %>