<% stylesheet 'my_games' %>
<% stylesheet 'teachers' %>

<div>
	<div class="floatLeft">
		<h1>My word lists</h1>
		<p>Create, edit, and manage your LinguaZone word lists.</p>
	</div>
	<div class="floatRight">
		<% link_to :controller => "customize", :action => "new", :cmzr_type => "list" do %>
			<div class="new_button">
				<span>Create a new word list</span>
			</div>
		<% end %>	
	</div>
	<br class="clearFloat" />
</div>

<fieldset>
	<legend>Search my LinguaZone word lists</legend>
	<%= render :partial => "search_fields" %>
</fieldset>

<br />

<div align="center">
	<% link_to :action => "all" do %>
		<div class="big_button" style="width: 250px">
			<span>View all my word lists</span>
		</div>
	<% end %>
</div>