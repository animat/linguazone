<% unless item.word_list.nil? %>
	<div class="game_listing" id="<%= dom_id(item) %>">
		<div class="game_details">
			<p>
				<%= item.word_list.description %><br />
				<span class="date">customized in <%= item.word_list.language.name %> by <%= (item.word_list.updated_by.nil?) ? "unknown" : item.word_list.updated_by.display_name %></span>
			</p>
		</div>
	
		<div class="manage_game">
			<%= link_to "Adopt", :controller => "customize", :action => "adopt_word_list", :cmzr_type => "word_list", :id => item.word_list.id %>
		</div>
		<br class="clearFloat" />
	</div>
<% end %>