<% stylesheet 'my_games' %>
<% stylesheet 'teachers' %>

<div>
	<div class="floatLeft">
		<h1>My word lists</h1>
		<p>Create, edit, and manage your LinguaZone word lists.</p>
	</div>
	<div class="floatRight">
		<%= link_to :controller => "customize", :action => "new", :cmzr_type => "list" do %>
			<div class="new_button">
				<span>Create a new word list</span>
			</div>
		<% end %>	
	</div>
	<br class="clearFloat" />
</div>

<fieldset>
	<legend>Search my LinguaZone word lists</legend>
	<%= render :partial => "search_fields" %>
</fieldset>

<br />

<div align="center">
	<%= link_to :action => "all" do %>
		<div class="big_button" style="width: 250px">
			<span>View all my word lists</span>
		</div>
	<% end %>
</div>

<% unless @word_lists.nil? or @word_lists.empty? %>
	<h2>Browsing games (<%= @total_word_lists_count %> total)</h2>
	<%= paginate @word_lists %>
	<% @word_lists.each do |wl| %>
		<%= render :partial => "word_list", :locals => {:word_list => wl} %>
	<% end %>
	<%= paginate @word_lists %>
<% else %>
	<h2>You have not created any word lists yet. Try creating a new one!</h2>
<% end %>