<div class="game_listing" id="<%= dom_id(item) %>">
	<div class="game_details">
		<p>
			<%= item.description %>
			<br />
			<span class="date">Last updated <%= format_short_date(item.updated_at) %></span>
		</p>
	</div>

	<div class="manage_game">
		<%= link_to 'Edit', :controller => "customize", :action => "edit", :id => item.id, :cmzr_type => "list" %>
		|
		<%= link_to 'Delete', :controller => "my_word_lists", :action => "destroy", :id => item.id %>
	</div>
	<br class="clearFloat" />
</div>