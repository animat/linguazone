<% stylesheet "my_games" %>

<h1>All of my audio blog posts</h1>

<% unless @ap.nil? or @ap.empty? %>
	<%= paginate @ap %>
	<% @ap.each do |p| %>
			<p><%= link_to p.post.title, post_path(p) %> <span class="date"><%= format_date_with_year(p.post.updated_at) %></span></p>
	<% end %>
	<%= paginate @ap %>
<% else %>
	<p>You have not yet created any audio blog posts. Go to a class page, then create your first one!</p>
<% end %>