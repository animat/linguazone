<% stylesheet "my_games" %>

<h1>All of my audio blog posts</h1>

<% unless @posts.nil? or @posts.empty? %>
	<%= page_entries_info @posts %>
	<br /><br />
	<% paginated_section @posts do %>
		<% @posts.each do |p| %>
			<p><%= link_to p.title, :controller => "posts", :action => "show", :id => p.id %> <span class="date"><%= format_date_with_year(p.updated_at) %></span></p>
		<% end %>
	<% end %>
<% end %>