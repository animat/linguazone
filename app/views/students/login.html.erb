<% stylesheet 'students' %>

<h1>Login to LinguaZone</h1>
<p>for one-click access to class pages and for access to password-protected pages <span style="color: green;">*optional</span></p>

<div>
  <fieldset class="login">
    <%= form_for (@user_session) do |f| %>
      <%= f.error_messages %>
      <div>
        <%= f.label :email, "Username or email address:" %>
        <br />
        <%= f.text_field :email %>
      </div>
      <br class="clearFloat" />
      <div>
        <%= f.label :password, "Password:" %>
        <br />
        <%= f.password_field :password %>
      </div>
      <br class="clearFloat" />
      <div align="center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <br class="clearFloat" />
      <div align="center">
        <%= f.hidden_field :role, :value => "student" %>
        <%= f.submit "Login" %>
      </div>
    <% end %>
  </fieldset>
<p>Or login via one of these services...</p>
<p><%= link_to "Twitter", "/auth/twitter" %> or <%= link_to "Google", "/auth/google" %> or <%= link_to "Facebook", "/auth/facebook" %></p>
</div>

<p class="helper_links"><%= link_to "Create a username & password", new_student_path %></p>
<p class="helper_links"><%= link_to "I forgot my password", :controller => "password_resets", :action => "new" %></p>