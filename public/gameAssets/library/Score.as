import mx.transitions.Tween;//class Score {	private var clip:MovieClip;	private var score:Number;	//	public function Score(clip:MovieClip) {		this.clip = clip.score;		this.clip.scoreNum = 0;		score = 0;	}	public function increaseScore(amount:Number):Void {		clip.scoreNum += amount;		score += amount;		new Tween(clip, "_xscale", mx.transitions.easing.Bounce.easeOut, 200, 100, 1, true);		new Tween(clip, "_yscale", mx.transitions.easing.Bounce.easeOut, 200, 100, 1, true);	}	public function decreaseScore(amount:Number):Void {		clip.scoreNum -= amount;		score -= amount;		new Tween(clip, "_xscale", mx.transitions.easing.Regular.easeOut, 200, 100, 1, true);		new Tween(clip, "_yscale", mx.transitions.easing.Regular.easeOut, 200, 100, 1, true);	}	//	// Getter and setter functions	public function getScore():Number {		return score;	}	public function resetScore():Void {		score = 0;	}	public function setScore(num:Number):Void {		score = num;	}	public function setPos(xx:Number, yy:Number):Void {		clip._x = xx;		clip._y = yy;	}	public function setScalePos(size:Number):Void {		clip._xscale = size;		clip._yscale = size;	}	public function setAlpha(amount:Number):Void {		clip._alpha = amount;	}}