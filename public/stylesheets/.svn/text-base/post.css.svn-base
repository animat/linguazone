fieldset {
	width: 80%;
	margin: 20px auto;
	/*background-color: #FFF6F0;*/
	border: 1px solid #017303;
}
legend span {
	padding: 2px 10px;
	background-color: #00D103;
	color: #FFF;
	text-shadow: 1px 1px 2px #017303;
	border: 1px solid #017303;
	font-weight: bold;
}
textarea {
	height: 100px;
	width: 100%;
}

#title h1 {
	float: left;
}
#title p.date {
	float: left;
	margin-left: 30px;
	margin-top: 15px;
	color: #009900;
	font-size: .9em;
}

ul.controls {
	display: none;
	margin-left: 30px;
	margin-bottom: 10px;
	margin-top: 5px;
	padding: 10px;
	background-color: #FFEFD5;
}
ul.controls li {
	padding: 10px;
	list-style: none;
	display: inline;
}

#comments {
	margin-bottom: 50px;
}
.comment {
	margin: 15px auto;
	width: 95%;
}
.teacher_comment {
	margin: 15px auto;
	width: 95%;
}
.comment blockquote {
	border: 1px solid #333399;
	background-color: #E8F1FF;
}
.teacher_comment blockquote {
	border: 1px solid #FF6600;
	background-color: #fae2cf;
}
.comment blockquote p {
	margin: 8px;
}
.teacher_comment blockquote p {
	margin: 8px;
}
.comment cite {
	position: relative;
	margin: 0px;
	padding: 7px 0px 0px 35px;
	top: 6px;
	background: transparent url('../images/tip.gif') no-repeat 20px 0;
	font-style: normal;
	color: #666;
}
.teacher_comment cite {
	position: relative;
	margin: 0px;
	padding: 7px 0px 0px 35px;
	top: 6px;
	background: transparent url('../images/tip-teacher.gif') no-repeat 20px 0;
	font-style: normal;
	color: #666;
}
.comment div.audio_player {
	float: left; 
	width: 215px; 
	height: 138px; 
	margin: 0px 15px; 
	border: 1px solid #333399;
}
.teacher_comment div.audio_player {
	float: left; 
	width: 215px; 
	height: 138px; 
	margin: 0px 15px; 
	border: 1px solid #FF6600;
}

.comment p.details {
	padding-bottom: 5px;
}
.teacher_comment p.details {
	padding-bottom: 5px;
}
.comment cite span.author {
	font-weight: bold;
	color: #194BA0;
}
.teacher_comment cite span.author {
	font-weight: bold;
	color: #194BA0;
}

.comment cite span.date {
	font-size: .8em;
}
.teacher_comment cite span.date {
	font-size: .8em;
}

.comment_teacher_note {
	width: 700px;
	margin: 10px 10px 10px 95px;
	padding: 1px 5px;
	border: 1px solid #FF6600;
	background-color: #fae2cf;
}
.new_comment_teacher_note {
	padding: 1px;
	margin: 10px 10px 10px 95px;
	width: 702px;
	background-color: #FF6600;
}
.new_comment_teacher_note textarea {
	width: 700px;
	height: 60px;
}